<div class="{{ section.class }} section-{{ section.id }}--padding">
    <div class="container">
        <div class="section_why_hunnybee">
            {% if section.settings.heading != blank %}
                <h3>{{ section.settings.heading }}</h3>
            {% endif %}

            <div class="section_content">
                {% if section.blocks.size > 0 %}
                    <div class="why_items">
                        {% for block in section.blocks %}
                            <div class="why_item">
                                <img src="{{ block.settings.image | image_url }}" alt="" loading="lazy" width="{{ block.settings.image.width }}"
                                    height="{{ block.settings.image.height }}" class="block w-fit">

                                <h5>{{ block.settings.title }}</h5>

                                <p>{{ block.settings.description }}</p>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<style>
    .section-{{ section.id }}--padding {
        padding-top: {{ section.settings.space_top_desk }}px;
        padding-bottom: {{ section.settings.space_bot_desktop }}px;
    }

    @media screen and (max-width: 767px) {
        .section-{{ section.id }}--padding {
            padding-top: {{ section.settings.space_top_mobile }}px;
            padding-bottom: {{ section.settings.space_bot_mobile }}px;
        }
    }
</style>

{% schema %}
    {
        "name": "Why Hunnybee",
        "class": "why-hunnybee",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Why Hunnybee?"
            },
            {
                "type": "header",
                "content": "Spacing"
            },
            {
                "type": "range",
                "id": "space_top_desk",
                "min": 40,
                "max": 80,
                "step": 2,
                "unit": "px",
                "label": "Space Top Desktop",
                "default": 40
            },
            {
                "type": "range",
                "id": "space_bot_desktop",
                "min": 40,
                "max": 80,
                "step": 2,
                "unit": "px",
                "label": "Space Bottom Desktop",
                "default": 40
            },
            {
                "type": "range",
                "id": "space_top_mobile",
                "min": 20,
                "max": 40,
                "step": 2,
                "unit": "px",
                "label": "Space Top Mobile",
                "default": 20
            },
            {
                "type": "range",
                "id": "space_bot_mobile",
                "min": 20,
                "max": 40,
                "step": 2,
                "unit": "px",
                "label": "Space Bottom Mobile",
                "default": 20
            }
        ],
        "blocks": [
            {
                "type": "image-with-text",
                "name": "Item",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title",
                        "default": "Free Shipping"
                    },
                    {
                        "type": "textarea",
                        "id": "description",
                        "label": "Description",
                        "default": "Get complimentary ground shipping on every order. Donâ€™t love it? Send it back, on us"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Why Hunnybee"
            }
        ]
    }
{% endschema %}
