<div class="{{ section.class }}">
    <div class="container">
        {% if section.blocks.size > 0 %}
            <div class="sitemap_items">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'text' %}
                            <div class="sitemap_item">
                                {% if block.settings.item_title != blank %}
                                    <h3>{{ block.settings.item_title }}</h3>
                                {% endif %}
                                
                                {% if block.settings.item_content != blank %}
                                    <div class="sitemap_item__content">
                                        {{ block.settings.item_content }}
                                    </div>
                                {% endif %}
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

{% schema %}
    {
        "name": "Sitemap Content",
        "class": "sitemap-content",
        "settings": [
            {
                "type": "header",
                "content": "Site Map Customize"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "Item",
                "settings": [
                    {
                        "type": "text",
                        "id": "item_title",
                        "label": "Title",
                        "default": "Home"
                    },
                    {
                        "type": "richtext",
                        "id": "item_content",
                        "label": "Content",
                        "default": "<p></p>"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Sitemap Content"
            }
        ]
    }
{% endschema %}
