                {{ block.settings.question_faqs_2 | split: '|' | first }}
              </span>
            </a>
          </h4>    
        </div>
        <div id="faqs-2-{{block.id}}" class="panel-collapse collapse">
          <div class="panel-body">
           
            <div data-title="{{section.settings.icon_answer }}2"  class="data-title">
              <div class="rte">
                {{ block.settings.answer_faqs_2 }}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% if block.settings.question_faqs_3 != blank %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a class="collapsed" data-toggle="collapse" href="#faqs-3-{{block.id}}" >
              
              <span data-title="{{section.settings.icon_faqs }}3" data-show="{{ section.settings.icon_show | split: '|' | first }}" data-hide="{{ section.settings.icon_hide | split: '|' | first }}">
                {{ block.settings.question_faqs_3 | split: '|' | first }}
              </span>
            </a>
          </h4>    
        </div>
        <div id="faqs-3-{{block.id}}" class="panel-collapse collapse">
          <div class="panel-body">
            
            <div data-title="{{section.settings.icon_answer }}3"  class="data-title">
              <div class="rte">
                {{ block.settings.answer_faqs_3 }}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% if block.settings.question_faqs_4 != blank %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a class="collapsed" data-toggle="collapse" href="#faqs-4-{{block.id}}" >
              <span data-title="{{section.settings.icon_faqs}}4" data-show="{{ section.settings.icon_show | split: '|' | first }}" data-hide="{{ section.settings.icon_hide | split: '|' | first }}">
                {{ block.settings.question_faqs_4 | split: '|' | first }}
              </span>
            </a>
          </h4>    
        </div>
        <div id="faqs-4-{{block.id}}" class="panel-collapse collapse">
          <div class="panel-body">
            
            <div data-title="{{section.settings.icon_answer}}4"  class="data-title">
              <div class="rte">
                {{ block.settings.answer_faqs_4}}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% if block.settings.question_faqs_5 != blank %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a class="collapsed" data-toggle="collapse" href="#faqs-5-{{block.id}}" >      
              <span data-title="{{section.settings.icon_faqs }}5" data-show="{{ section.settings.icon_show | split: '|' | first }}" data-hide="{{ section.settings.icon_hide | split: '|' | first }}">
                {{ block.settings.question_faqs_5 | split: '|' | first }}
              </span>
            </a>
