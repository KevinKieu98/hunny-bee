</div>


<style>
    .faqs-page .panel-title {
      font-size: {{ section.settings.font_size_qs }}px;
      margin: 0;
      position: relative;
    }
    
    .faqs-page .panel-title > a {
      color: #1b1b1b;
    text-decoration: none;
    vertical-align: middle;
    align-items: center;
    display: flex;
    padding: 40px 0;
    border-bottom: solid 1px #ccc;
    }
    
    .faqs-page .panel-title > a span:before {
      content: attr(data-title) "";
      background-color: {{ section.settings.bg_icon_qs }};
      color: {{ section.settings.color_icon_qs }};
    }  
    
    .faqs-page .panel-title > a:not(.collapsed) {
      background-color: {{ section.settings.bg_question_acitve }};
      color: {{ section.settings.color_question_acitve }};
    }
    
    .faqs-page .panel-group .panel-body {
      /* font-size: {{ section.settings.font_size_answer }}px; */
      color: {{ section.settings.color_question_answer }};
    }
    
    .faqs-page .panel-group .panel-body > div:before {
      content: attr(data-title) "";
      background-color: {{ section.settings.bg_icon_answer }};
      color: {{ section.settings.color_icon_answer }};
      border-color: {{ section.settings.color_icon_answer }};
    }
    
    .faqs-page .des_faqs a,
    .faqs-page.panel-group .panel-body a {
      color: {{ section.settings.color_question_link }};
    }
    
    
    .faqs-page .panel-group .panel-title a span {
      padding: 0px 25px 0px 12px;
      align-items: flex-start;
      vertical-align: center;
      text-align: left;
      display: flex;
    }
    .panel.panel-default {
      padding: 0px 32px;
    }
    .panel-collapse.collapse {
      display: none;
    }
     .panel-collapse.collapse.show {
      display: block;
      background: linear-gradient(0deg, var(--rose), transparent);    
    }
    
    .panel-title a{
      text-decoration: none;
    }
    .faqs-page .panel-group .panel-title a span:before {
      position: relative;
      top: 0;
      font-size: 32px;
      line-height: 40px;
      font-weight: 400;
      font-family: 'AvertaStdCY';
      background: transparent;
      display: inline;
      margin-right: 32px;
    }
    
    .faqs-page .panel-group .panel-body > div:before {
      content: attr(data-title) "";
      background-color: #69c69c;
      border-color: #ffffff;
    }
    .faqs-page .panel-group .panel-body>div:before {
      position: relative;
      top: 3px;
      display: inline-block;
      vertical-align: top;
      font-size: var(--font_size_minus2);
      font-weight: 500;
      line-height: 1em;
      padding: 4px 8px 3px;
      min-width: 63px;
      -moz-border-radius: 1px;
      -webkit-border-radius: 1px;
      -ms-border-radius: 1px;
      -o-border-radius: 1px;
      border-radius: 1px;
      margin-right: 20px;
      text-align: center;
    }
    .faqs-page .panel-title > a:not(.collapsed) {
      display: flex;
      position: relative;
      text-decoration: none;
    }
    .faqs-page .panel-group .panel-title a:not(.collapsed) span:after {
      content: attr(data-hide) "";
      align-items: center;
    }
    .faqs-page .panel-group .panel-title a span:after {
      display: inline-block;
      font-size: var(--font_size);
      font-weight: normal;
      line-height: var(--font_size_plus12);
      text-align: right;
      content: attr(data-show) "";
      color: var(--breadcrumb_color);
      position: absolute;
      right: 25px;
      top: 0;
      padding: 9px 0 7px;
      text-transform: capitalize;
      
    }
    .faqs-page.container{
      padding-bottom: 80px;
    }
    .panel-body .data-title {
      display: flex;
      padding: 20px 32px 40px 0;
    }
    .faqs-page .panel-group .panel-body > div:before {
      visibility: hidden;
    }
    h4.panel-title.show a {
    padding: 0;
    border: none;
}

@media (max-width: 767px){
       .faqs-page .panel-group {
        margin-bottom: 30px
    }

    .faqs-page .panel-group .panel-title a {
        padding-right: 25px
    }

    .faqs-page .panel-group .panel-title a span:after {
        right: 10px;
    }

    .faqs-page .panel-group .panel-title a:after {
        display: none
    }

    .faqs-page .contact-link {
        -webkit-flex-direction: column;
        -moz-flex-direction: column;
        -ms-flex-direction: column;
        flex-direction: column;
        -webkit-box-pack: center;
        -moz-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center
    }

    .faqs-page .contact-link .text {
        margin-bottom: 20px
    }
    
  }

</style>


