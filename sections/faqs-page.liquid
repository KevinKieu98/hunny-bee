<div class="faqs-page container">
  <header class="page-header">
    <h1>
      {{  page.title }}
    </h1>  
  </header>
  
  <section id="faqs_page">
    {% if section.settings.des_faqs != blank %}
    <div class="des_faqs">
      {{ section.settings.des_faqs }}
    </div>
    {% endif %}
    
    <div class="panel-group">
      {% for block in section.blocks %}
      {% if block.settings.question_faqs_1 != blank %}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title {% if forloop.first %} show{% endif %}">
            <a class="{% unless forloop.first %}collapsed{% endunless %}" data-toggle="collapse" href="#faqs-1-{{block.id}}" >
              <span data-title="{{section.settings.icon_faqs}}1" data-show="{{ section.settings.icon_show | split: '|' | first }}" data-hide="{{ section.settings.icon_hide | split: '|' | first }}">
                {{ block.settings.question_faqs_1 | split: '|' | first }}
              </span>
            </a>
          </h4>    
        </div>
        <div id="faqs-1-{{block.id}}" class="panel-collapse collapse{% if forloop.first %} show{% endif %}">
          <div class="panel-body">
            <div data-title="{{section.settings.icon_answer }}1"  class="data-title">
              <div class="rte">
                {{ block.settings.answer_faqs_1 }}
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      {% if block.settings.question_faqs_2 != blank %}
